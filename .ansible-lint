---
exclude_paths:
  - .github/**
  - artifacts/
  - aws/
  - azure/
  - gcp/
  - ibm/
  - templates/
  - ssh-bootstrap.yml
  - Taskfile.yaml

enable_list:
  - yaml
  - empty-string-compare
  - args

profile: production

skip_list:
  - risky-shell-pipe
  - jinja[spacing]
  - yaml[brackets]
  - yaml[line-length]
  - yaml[trailing-spaces]
